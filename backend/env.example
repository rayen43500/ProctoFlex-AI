# Configuration ProctoFlex AI
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# Base de données PostgreSQL
DATABASE_URL=postgresql://postgres:root@localhost:5432/proctoflex
DATABASE_TEST_URL=postgresql://postgres:root@localhost:5432/proctoflex_test

# Sécurité
SECRET_KEY=your-secret-key-change-in-production-please-use-a-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Serveur
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS - Ajoutez vos domaines autorisés
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# IA et Surveillance
FACE_RECOGNITION_CONFIDENCE=0.8
FACE_RECOGNITION_TOLERANCE=0.6
MIN_FACE_CONFIDENCE=0.8
GAZE_DETECTION_ENABLED=true
AUDIO_ANALYSIS_ENABLED=true
SCREEN_ANALYSIS_ENABLED=true

# Stockage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600
RETENTION_DAYS=90

# WebSocket
WEBSOCKET_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Redis (optionnel)
REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_METRICS=true
